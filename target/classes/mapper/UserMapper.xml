<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.personalizedlearning.system.mapper.UserMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.personalizedlearning.system.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
    </resultMap>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.personalizedlearning.system.entity.User">
        INSERT INTO users (username, password, name, email, role, avatar, status)
        VALUES (#{username}, #{password}, #{name}, #{email}, #{role}, #{avatar}, #{status})
    </insert>

    <!-- 更新用户 -->
    <update id="update" parameterType="com.personalizedlearning.system.entity.User">
        UPDATE users
        SET username = #{username},
            password = #{password},
            name = #{name},
            email = #{email},
            role = #{role},
            avatar = #{avatar},
            status = #{status}
        WHERE id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <!-- 根据ID查询用户 -->
    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <!-- 查询所有用户 -->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM users
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="findByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <!-- 根据角色查询用户 -->
    <select id="findByRole" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM users WHERE role = #{role}
    </select>

    <!-- 分页查询用户 -->
    <select id="findByPage" resultMap="BaseResultMap">
        SELECT * FROM users LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 查询用户总数 -->
    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM users
    </select>

    <!-- 根据状态查询用户 -->
    <select id="findByStatus" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT * FROM users WHERE status = #{status}
    </select>

    <!-- 更新用户密码 -->
    <update id="updatePassword" parameterType="map">
        UPDATE users
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <!-- 搜索用户 -->
    <select id="search" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM users
        WHERE username LIKE CONCAT('%', #{keyword}, '%')
           OR name LIKE CONCAT('%', #{keyword}, '%')
           OR email LIKE CONCAT('%', #{keyword}, '%')
    </select>

    <!-- 登录验证 -->
    <select id="login" parameterType="map" resultMap="BaseResultMap">
        SELECT * FROM users
        WHERE username = #{username} AND password = #{password}
    </select>
</mapper>